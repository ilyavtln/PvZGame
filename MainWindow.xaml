<Window x:Class="PvZGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PvZGame"
        Height="450" Width="800">
    <Grid>
        <Canvas x:Name="MainMenuCanvas" Background="LightGreen" Focusable="True">
            <StackPanel VerticalAlignment="Center" Margin="40 40 " HorizontalAlignment="Center">
                <Button x:Name="MainPlayButton" Content="Играть" Width="150" Height="50" Click="PlayButton_Click"/>
                <Button x:Name="MainSettingsButton" Content="Настройки" Width="150" Height="50" Click="SettingsButton_Click" Margin="0,10,0,0"/>
                <Button x:Name="MainExitButton" Content="Выход" Width="150" Height="50" Click="ExitButton_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
